<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.treskie.conrad.ohm_mama.MainActivity"
    tools:layout_editor_absoluteY="81dp">


    <Button
        android:id="@+id/fourBandsBtn"
        android:layout_width="395dp"
        android:layout_height="70dp"
        android:text="Four Bands"
        android:onClick="fourBandsSelected"
        app:layout_constraintBottom_toTopOf="@+id/fiveBandsBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fiveBandsBtn"
        android:layout_width="395dp"
        android:layout_height="70dp"
        android:onClick="fiveBandsSelected"
        android:text="Five Bands"
        app:layout_constraintBottom_toTopOf="@+id/sixBandsBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fourBandsBtn" />

    <Button
        android:id="@+id/sixBandsBtn"
        android:layout_width="395dp"
        android:layout_height="70dp"
        android:onClick="sixBandsSelected"
        android:text="Six Bands"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fiveBandsBtn" />
</android.support.constraint.ConstraintLayout>
